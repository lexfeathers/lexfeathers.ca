---
layout: /layout.njk
---
{% set portfolio = search.pages("type=projects draft=false", "published=desc") %}

{% for project in portfolio %}
    <div class="grid-item">
        <a href="{{ project.url }}">
            <div class="grid-item__information">
                <div class="grid-item__media">
                    <img 
                        src="{{ project.image }}" 
                        alt="{{ project.title }}" 
                        title="{{ project.title }}" 
                        class="project-photo"
                    >
                </div>
                <h2>{{ project.title }}</h2>
                <h3 class="text-small">{{ project.author }}</h3>
                <subtitle>{{ project.work_type }}</subtitle>
            </div>
        </a>
    </div>
{% endfor %}
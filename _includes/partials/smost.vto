<div class="smost" id="{{ smost.published |> date('MM-yy')}}-{{smost.smost_content |> lower |> replace(' ', '-') |> truncate(32, true, '')}}">
    <span class="smost-date">
        <a href="{{ if title == 'transients' }}#{{ smost.published |> date('MM-yy')}}-{{smost.smost_content  |> lower |> replace(' ', '-') |> truncate(32, true, '')}}{{ else }}/transients/{{ /if }}">
            {{ smost.published |> date('dd-MM-yy')}}{{ if title == 'transients' }} at {{ smost.published |> date('HH:mm') }}{{ /if }}
        </a>
    </span>
	<span class="smost-content">: {{ smost.smost_content }}</span>
</div>
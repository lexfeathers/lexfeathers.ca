<header>
  <h1 class="header-logo">
    <a href="/">
      <img
        class="logo"
        id="darklogo"
        src="{{ website.logo.image_darkmode }}"
        alt="{{ website.logo.alt }}"
        aria-hidden="true"
      >
      <img
        class="logo"
        id="lightlogo"
        src="{{ website.logo.image_lightmode}}"
        alt="{{ website.logo.alt }}"
        aria-hidden="true"
      >
      <span class="name">{{ website.title }}</span>
    </a>
    {{ include "partials/theme-selector.vto" }}
  </h1>
  <nav>
    <ul class="menu">
      {{ include "partials/mainmenu.vto" }}
    </ul>
  </nav>
</header>

<style>
  .logo {
    width: {{ website.logo.width }};
    vertical-align: middle;
    margin-right: 1.5rem;
  }
  @media screen and (max-width: 749px) {
    .logo {
      width: 24px;
    }
  }
</style>

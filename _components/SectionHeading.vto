{{# 
    Usage syntax:
    {{ await comp.SectionHeading({heading: "Welcome!", blurb: "This is a section heading's blurb"}) }} 
#}}

<div class="section-heading">
  {{ if heading }}
    <h2>{{ heading }}</h2>
  {{ /if }}
  {{ if blurb }}
    <div class="section-heading__blurb">
      <p>{{ blurb }}</p>
    </div>
  {{ /if }}
</div>

<style>
  .section-heading {
    display: flex;
    align-items: center;
    width: 100%;

    & > * {
      width: 50%;
    }
  }
  @media screen and (max-width: 1279px) {
    .section-heading {
      flex-direction: column;
      justify-content: flex-start;

      & > * {
        width: 100%;
      }
    }
  }
</style>
